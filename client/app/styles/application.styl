@import 'nib'
@import '_fonts'

$primaryColor = #ee4133

h1, h2, h3, h4, h5, h6
  margin 0

fullHeight()
  height 100%
  height auto !important
  min-height 100%

*, *:after, *:before
  box-sizing border-box

html
  height 100%

html, body
  margin 0
  height 100%

#brooklyn-united
  height 100%
  & > .ember-view
    height 100%

.panel
  background-color $primaryColor
  min-height 100%
  height auto
  &.hero
    padding 115px 200px 0
    text-align center
    h1, h2
      font-family fontBold()
    h1
      color #fff
      font-size 72px
    h2
      color #000
      font-size 32px

#filters
  width 800px
  margin 0 auto
  text-align center
  margin-top 90px
  h3
    font-size 72px
    font-family fontBold()
    color #000
  .filter-group
    font-size 40px
    font-family fontRoman()
    small
      font-size 20px
      font-family fontRoman()
    .dropdown
      position relative
      .display
        border-bottom 1px dashed #fff
        color #fff
        cursor pointer
        text-transform capitalize
        position relative
        &.is-active
          z-index 1000
.cheech
  position fixed
  top 0
  left 0
  width 100%
  height 100%
  z-index 1000
  background-color #000
  opacity 0
  visibility hidden
  transition all 500ms
  &.is-active
    opacity 0.8
    visibility visible
.options-list
  display inline-block
  visibility hidden
  color #000
  font-size 20px
  position absolute
  left 0
  top 100%
  list-style none
  margin 0
  padding 0
  text-align left
  width 300px
  &.is-active
    visibility visible
    z-index 1000
    .option-item
      transform rotateX(0deg) translateZ(0) scale(1)
      box-shadow 0 0 1px rgba(0, 0, 0, 0.35)
      &:nth-child(1)
        transition-delay 100ms
        z-index 2
      &:nth-child(2)
        transition-delay 200ms
        z-index 3
      &:nth-child(3)
        transition-delay 300ms
        z-index 4
      &:nth-child(4)
        transition-delay 400ms
        z-index 5
      &:nth-child(5)
        transition-delay 500ms
        z-index 6
  .option-item
    padding 20px 10px
    cursor pointer
    transform-origin 50% 0
    transform rotateX(90deg) translateZ(-100px) scale(1.2)
    box-shadow -10px -10px 30px rgba(0, 0, 0, 0.1)
    transition all 75ms linear
    background-color rgba(255, 255, 255, 0.8)
    font-family fontLight()
    position relative
    &:hover, &.selected
      background-color $primaryColor
      color #fff
    &:hover
      transform scale(1.1)
      z-index 1000
