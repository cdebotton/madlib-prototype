@import 'nib'

$baseColor = #2794BC

html, body
  margin 0

.container
  width 960px
  margin 0 auto

#hero-unit
  background-color $baseColor
  color #fff
  width 100%
  padding 20px
  font-size 2.2em
  line-height 2.3em
  font-weight 100


.filter-box-wrapper
  display inline-block
  position relative
  height 1em
  .filter-box-display
    min-width 100px
    width 300px
    display inline-block
    border-bottom 2px dashed lighten($baseColor, 20%)
    margin 0 10px
    padding 0 10px
    cursor pointer
    height 1em
    transition background-color ease-in 175ms
    &:hover
      background-color lighten($baseColor, 10%)
      &+ul
        display inline-block
        li
          animation-play-state running
  .options
    display none
    list-style none
    padding 0
    margin 0
    position absolute
    bottom -100%
    width 100%
    height 1em
    font-size 0.6em
    font-weight 100
    li
      background-color rgba(91, 186, 221, 0.85)
      display block
      line-height 1.4em
      cursor pointer
      padding 5px
      padding 20px
      animation-play-state paused
      &:first-child
        border-top-left-radius 4px
        border-top-right-radius 4px
      &:last-child
        border-bottom-left-radius 4px
        border-bottom-right-radius 4px
      &+li
        margin-top 2px
